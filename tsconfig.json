{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,
    "jsx": "preserve",
    "baseUrl": ".",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "typeRoots": ["./node_modules/@types/", "./typings/"],
    "noImplicitAny": false,
    "skipLibCheck": true,
    "types": [
      "unplugin-vue-define-options"
    ]
  },
  "include": [
    "examples/**/*.ts",
    "examples/**/*.tsx",
    "examples/**/*.vue",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "typings/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "exclude": ["node_module", "**/__tests__", "dist/**",  "packages/**/dist/**", "packages/casta-fe-playground/**"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
